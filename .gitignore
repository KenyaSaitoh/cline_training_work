# TomEE 8 - 実行時生成ファイルのみ除外
# （conf/*.template、conf/tomee.xml、lib/*.jarは初期セットアップ用に管理対象）
/tomee8/webapps/*
!/tomee8/webapps/
/tomee8/logs/**
!/tomee8/logs/.gitkeep
/tomee8/temp/**
/tomee8/work/**
/tomee8/conf/Catalina/**

# TomEE 8 - HSQLDB 動的ファイル除外
/tomee8/data/hsqldb/*.log
/tomee8/data/hsqldb/*.lck
/tomee8/data/hsqldb/*.tmp/
/tomee8/data/hsqldb/hsqldb.tmp/**

# TomEE 8 - 動的に変更される設定ファイルを除外
/tomee8/conf/server.xml
!/tomee8/conf/server.xml.template
!/tomee8/conf/server.xml.original
!/tomee8/conf/tomee.xml

# TomEE 8 - 文字化け対策のsetenvスクリプトは管理対象
!/tomee8/bin/setenv.bat
!/tomee8/bin/setenv.sh

# HSQLDB データファイル
/hsqldb/data/**
!/hsqldb/data/.gitkeep

